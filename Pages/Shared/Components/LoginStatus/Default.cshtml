@model _8lpets.Models.User

@if (Model != null)
{
    <div class="d-flex align-items-center">
        <span class="text-light me-3">
            <i class="fas fa-coins me-1"></i>
            <span class="8lpoints">@Model.NeoPoints</span>
        </span>
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-1"></i>
                @Model.Username
                <span class="badge bg-success ms-1">Logged In</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" asp-page="/Account/Profile">My Profile</a></li>
                <li><a class="dropdown-item" asp-page="/MyPets">My Pets</a></li>
                <li><a class="dropdown-item" asp-page="/Inventory">My Inventory</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/Account/Logout">Logout</a></li>
            </ul>
        </div>
    </div>
}
else
{
    <div class="d-flex align-items-center">
        <span class="text-light me-3">
            <i class="fas fa-user-slash me-1"></i>
            <span class="text-warning">Not Logged In</span>
        </span>
        <div class="d-flex">
            <a class="btn btn-outline-light me-2" asp-area="" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
            <a class="btn btn-light" asp-area="" asp-page="/Account/Register">
                <i class="fas fa-user-plus me-1"></i> Register
            </a>
        </div>
    </div>
}
