@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <h1 class="mb-4">Change Password</h1>

    <partial name="_SuccessMessage" />
    <partial name="_LoginStatusPartial" />

    @if (!Model.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <p>You need to <a asp-page="/Account/Login">log in</a> to change your password.</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-3">
                <div class="list-group mb-4">
                    <a asp-page="/Account/Profile" class="list-group-item list-group-item-action">
                        <i class="fas fa-user me-2"></i> Profile
                    </a>
                    <a asp-page="/Account/Activity" class="list-group-item list-group-item-action">
                        <i class="fas fa-chart-line me-2"></i> Activity
                    </a>
                    <a asp-page="/Account/EditProfile" class="list-group-item list-group-item-action">
                        <i class="fas fa-user-edit me-2"></i> Edit Profile
                    </a>
                    <a asp-page="/Account/ChangePassword" class="list-group-item list-group-item-action active">
                        <i class="fas fa-key me-2"></i> Change Password
                    </a>
                    <a asp-page="/Account/Logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Change Your Password</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <partial name="_ValidationSummary" />

                            <div class="mb-3">
                                <label asp-for="Input.CurrentPassword" class="form-label"></label>
                                <input asp-for="Input.CurrentPassword" class="form-control" />
                                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.NewPassword" class="form-label"></label>
                                <input asp-for="Input.NewPassword" class="form-control" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-page="/Account/Profile" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Change Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
